  location <%= location %> {
    <% if has_variable?("try_files") then %>
    try_files <% try_files.each do |try| -%> <%= try %> <% end -%>;
    <% end %>
    proxy_pass <%= proxy %>;
    proxy_read_timeout <%= proxy_read_timeout %>;
    <%- if @proxy_headers -%>
    <%- @proxy_headers.each do |k,v| -%>
    proxy_set_header <%= k -%> <%= v %>;
    <%- end -%>
    <%- end -%>
  }
